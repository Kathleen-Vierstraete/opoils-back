{% extends 'back/base_back.html.twig' %}

{% block title %}Membres{% endblock %}

{% block body %}
    <h1>Fiche membre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ member.email }}</td>
            </tr>
            <tr>
                <th>Rôle</th>
                <td>{{ member.roles ? member.roles|json_encode : '' }}</td>
            </tr>
            {# <tr>
                <th>Password</th>
                <td>{{ member.password }}</td>
            </tr> #}
            <tr>
                <th>Nom de famille</th>
                <td>{{ member.lastname }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ member.firstname }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ member.username }}</td>
            </tr>            
            <tr>
                <th>Téléphone</th>
                <td>{{ member.phone }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ member.adress }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ member.postalCode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ member.city }}</td>
            </tr>
            <tr>
                <th>Photo de profil</th>
                <td><img src="{{ app.request.getBaseURL() }}/uploads/pictures/{{ member.picture }}" width="150px"></td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning float-end" href="{{ path('app_back_member_index') }}">Retour à la liste</a>

    <a class="btn btn-secondary m-1" href="{{ path('app_back_member_edit', {'id': member.id}) }}">Editer</a>

    {{ include('back/member/_delete_form.html.twig') }}
{% endblock %}
