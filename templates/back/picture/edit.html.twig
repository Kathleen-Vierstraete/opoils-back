{% extends 'back/base_back.html.twig' %}

{% block title %}Editer la photo de {{ dog.name }} {% endblock %}

{% block body %}
    <h1>Editer la photo de {{ dog.name }}</h1>

    <p>La photo actuelle</p>

    <p><img src="{{ app.request.getBaseURL() }}/uploads/pictures/{{ picture.picture }}" width="150px"></p>

    {{ include('back/picture/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

    <a class="btn btn-warning float-end" href="{{ path('app_back_picture_indexpictures', {'id': dog.id}) }}">Retour à la liste</a>

    {{ include('back/picture/_delete_form.html.twig') }}
{% endblock %}
