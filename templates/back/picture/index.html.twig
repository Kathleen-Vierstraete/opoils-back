{% extends 'back/base_back.html.twig' %}

{% block title %}Picture index{% endblock %}

{% block body %}
    <h1>Picture of {{ dog.name }} </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Picture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for picture in pictures %}
            <tr>
                <td>{{ picture.id }}</td>
                <td><img src="{{ app.request.getBaseURL() }}/uploads/pictures/{{ picture.picture }}" width="150px"></td>          
                <td>
                    <a href="{{ path('app_back_picture_show', {'id': picture.id, dog_id: dog.id }) }}">show</a>
                    <a href="{{ path('app_back_picture_edit', {'id': picture.id, dog_id: dog.id }) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_picture_new', {id: dog.id}) }}">Create new</a>
{% endblock %}
