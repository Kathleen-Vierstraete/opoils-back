{% extends 'back/base_back.html.twig' %}

{% block title %}Dog index{% endblock %}

{% block body %}
    <h1>Dog index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Race</th>
                <th>Presentation</th>
                <th>Owner</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dog in dogs %}
            <tr>
                <td>{{ dog.id }}</td>
                <td>{{ dog.name }}</td>
                <td>{{ dog.age }}</td>
                <td>{{ dog.race }}</td>
                <td>{{ dog.presentation }}</td>
                <td>{{ dog.member.pseudo }}</td>

                <td>
                    <a href="{{ path('app_back_dog_show', {'id': dog.id}) }}">show</a>
                    <a href="{{ path('app_back_dog_edit', {'id': dog.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_dog_new') }}">Create new</a>
{% endblock %}
